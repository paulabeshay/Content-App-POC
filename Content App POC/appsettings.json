{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    }
  },
  "Umbraco": {
    "CMS": {
      "Global": {
        "Id": "f8ac6fa9-d35c-477d-98f1-034db5a2ef86",
        "SanitizeTinyMce": true
      },
      "Content": {
        "AllowEditInvariantFromNonDefault": true,
        "ContentVersionCleanupPolicy": {
          "EnableCleanup": true
        }
      },
      "Unattended": {
        "UpgradeUnattended": true
      },
      "Security": {
        "AllowConcurrentLogins": false
      }
    }
  },
  "ConnectionStrings": {
    "CommentsMgt": "Server=(localdb)\\MSSQLLocalDB;Database=CommentsMgt_Prim;Trusted_Connection=True;"
  },
  "CommentsConfig": {
    "CMSDisplayToggle": "cMSDisplay",
    "PortalDisplayToggle": "portalDisplay",
    "CommentsAdminRole": "CommentsAdmin",
    "CommentsViewerRole": "CommentsViewer",
    "AdminCanAddComment": "true",
    "CommentsAutoApproved": "false"
  }
}
